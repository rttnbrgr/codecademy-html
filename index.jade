		link(href='https://fonts.googleapis.com/css?family=Crimson+Text:400,400italic,600,600italic,700,700italic',rel='stylesheet',type='text/css')
		link(href='css/cc6-style.css',rel='stylesheet')
	body
		
		include resume.html
		
		script.
			function insertDots() {
				
				var element = document.getElementsByTagName('h1');
				var position = 'afterend'; // 'beforebegin', 'afterbegin', 'beforeend'
				var wrapperMarkup = "<div class='dot-wrapper'></div>";
				
				// insert the wrapper
				element[0].insertAdjacentHTML(position, wrapperMarkup);

				var numberOfDots = 5;
				var dotWrapper = document.getElementsByClassName('dot-wrapper')
				var dotMarkup = "<div class='dot'></div>";	
				
				// insert the dots
				for ( var i = 0; i < numberOfDots; i++) {
					dotWrapper[0].insertAdjacentHTML('afterbegin', dotMarkup);
				};
				
			}

			// call the function
			insertDots();
